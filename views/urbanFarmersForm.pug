main
  .container(style='width: 50%; transform:translateY(35px);')
    h2 Please Sign Up
    hr
    .row.justify-content-center.align-items-center.my-5.cage
      .col-lg-2.cage
        form(action='Urbanfarmer-signup' name='signup' method='post')
          .row.justify-content-center.align-items-center.g-2.lamar
            .col-lg-4.form-zones
              label First name:
              input.form-inputs(name='userName' type='text')
            .col-lg-4.form-zones
              label Last name:
              input.form-inputs(name='userName' type='text')
            .col-lg-4.form-zones
              label Date of Registration:
              input.form-inputs(name='regDate' type='date')
            .col-lg-4.form-zones
              label NIN:
              input.form-inputs(name='ninNumber' type='text')
            .col-lg-4.form-zones
              label Date of Birth:
              input.form-inputs(name='birthDay' type='text')
            .col-lg-4.form-zones
              label Contact:
              input.form-inputs(name='phoneNumber' type='text')
            .col-lg-4.form-zones
              label Activities:
              select#select.form-select(name='dropdown')
                option(value='') Select option
                option(value='1') Horticulture
                option(value='2') Poultry
                option(value='3') Diary
            .col-lg-4.form-zones
              label Unique Id:
              input.form-inputs(name='idNumber' type='text')
            .col-lg-4.form-zones
              label Ward name:
              input.form-inputs(name='wardName' type='text')
            .col-lg-12.form-radio
              label Gender:
              .radio
                | Male
                input(type='radio' name='sex' checked='')
                |             Female
                input(type='radio' name='sex')
            hr.boundary
            .btnz
              button(type='submit')
                span
                | Sign Up
