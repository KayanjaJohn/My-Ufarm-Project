
extends dashlayout
block content
    .container
        .row
            .col-md-4
                h4.mb-5(style='font-weight:900; font-size:34px;') Poultry Report
                    .card.card-custom.mx-2.mb-3.my-5(style='width: 25rem; height:15rem; border-radius:25px; border:4px solid magenta; color: seagreen; background-color:rgb(228, 242, 255, 0.5);')
                        .card-body
                            h6(style='font-weight:800; font-size:24px;') Products Quantity: #{totalP.totalQuantity}
                            h6 Products : #{totalP._id}
                            h6 Revenue Projection: #{new Intl.NumberFormat().format(totalP.totalCost)} UGX
                            p.card-text            
            .col-md-4
                h4.mb-5(style='font-weight:900; font-size:34px;') Dairy Report
                    .card.card-custom.mx-2.mb-3.my-5(style='width: 25rem; height:15rem; border-radius:25px; border:4px solid cyan; color: teal; background-color:rgb(228, 242, 255, 0.5);')
