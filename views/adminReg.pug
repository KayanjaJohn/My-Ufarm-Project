    width: 98%;
    padding: 25px;
    background: rgb(12, 12, 12,0.5);
    }
    .descrip,h1 , h3{
    font-size: 55px;
    color: rgb(255, 255, 255,0.8);
    }
    .card {
    text-decoration: none; 
    height: 40vh;
    background: linear-gradient(rgb(0, 0, 0,0.65),rgb(0, 0, 0,0.65));
    border: 2px solid rgba(195, 34, 210, 0.78);
    box-shadow:2px 2px 4px 5px rgba(94, 22, 94, 0.56);
    color: rgba(250, 250, 250, 0.8);
    //-transform: translateY(15%);
    }
    img{
    height: 25vh;
    border-radius: 5px;
    }
    .card-title{
    transform: translateY(-12px);
    font-weight: 900;
    }
    .btn-2 {
    margin-right: 24px;
    background:rgb(0, 136, 123,0.4);
    font-weight:700;
    width: 100%;
    height: 3hv;
    border-radius: 8px;
    border: 2px solid rgb(0, 136, 123);
    transition:ease-in-out 0.5s;
    padding: 8px;
    background: rgb(11, 11, 11,0.4);
    transform: translateY(30px);
    overflow: hidden;
    position: relative;
    color: rgb(166, 170, 174);
    cursor: pointer;
    }
    span{
    border-radius: 8px;
    background: #2ff15c;
    width: 0;
    height: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: -1;
    transition: 0.5s;
    }

    .btn-2:hover span{
    width: 100%;
    }

    .btn-2:hover{
    text-decoration: none;
    border: none;
    color: #100e11;
    }
