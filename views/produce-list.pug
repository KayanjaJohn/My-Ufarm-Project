extends dashlayout
block content
    style.
        .list{
        text-align:center;
        }
        .card-title{
        background: linear-gradient(to bottom,rgb(15, 93, 93),rgb(41, 232, 232,0.58),rgb(26, 77, 77));
        color:black;
        border:24px solid rgb(0,0,0,0.67);
        padding:8px;
        font-weight:bolder;
        font-size:28px;
        border-radius:15px 30px 15px 30px;
        }
        nav{
        font-weight:bolder;
        text-align:center;
        }
        .nav-link{
        background: linear-gradient(to bottom,rgb(15, 93, 93),rgb(41, 232, 232),rgb(26, 77, 77));
        border-radius:15px 30px 15px 30px;
        width:20%;
        padding:8px;
        //-height:8vh;
        color:black; border:teal;
        //-margin:auto;
        }
        .table{
        width:95%; 
        margin:auto;
        border:2px ridge grey; 
        padding:8px;
        }
        thead{
        font-weight:700;
        font-size:18px;  
        }
        tbody{
            font-weight:500;
            font-size:15px;
        }
        .form-group{
            transform:translateY(55px);
            margin-left:12px;
            padding:25px;
            position:absolute;
            left:0;

        }
        .btnz{
            background: linear-gradient(to bottom,rgb(15, 93, 93),rgb(41, 232, 232),rgb(26, 77, 77));
            padding-top:8px;
            padding-bottom:8px;
            font-weight:bolder;
        }
        .delete{
            background: linear-gradient(to bottom,rgb(150, 21, 21),rgb(240, 84, 90),rgb(77, 26, 26));
            font-size:18px;
            font-weight:700;
            color: rgb(11, 11, 11,0.87);
        }
        .update{
            background: linear-gradient(to bottom,rgb(21, 150, 64),rgb(180, 240, 84),rgb(26, 77, 29));	
            color:rgb(25, 90, 90);
            font-size:18px;
            font-weight:700;
        }
    header.card-header
        h4.card-title List of Farmer ones
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='/') Register FarmerOne
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Produce Name
                th Quantity
                th Price
                th Mode of Delivery
                th Mode of Payment
                th Image 
                th Update
                th Delete
        tbody
            if products.length
                each product in products
                    tr
                        td #{product.producename}
                        td #{product.quantity}
                        td #{product.price}
                        td #{product.modeofdelivery}
                        td #{product.modeofpayment}
                        td 
                            img(src="/"+product.prodImage, alt="Image" width='150px' height="150px")
                        //- td #{moment(us
                        td
                            a
                                button.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update
                        td
                            form(method="post" action='/farmerOne/delete')
                                input(type="hidden" placeholder="" name="id", value=product._id)
                                button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div.col.form-group
            a(class='button' href='/agricOfficerDash') Back

