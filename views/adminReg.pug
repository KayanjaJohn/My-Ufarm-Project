main
  .container(style='transform:translateY(50px);')
    h2 Please Sign Up
    hr.hr
    .row.justify-content-center.align-items-center.my-5.cage
      .col-lg-5.cage
        form(action='signUp' name='register')
          .row.justify-content-center.align-items-center.g-2.lamar
            .col-lg-4.form-zones
              label First name:
              input.form-inputs(name='userName' type='text')
            .col-lg-4.form-zones
              label Last name:
              input.form-inputs(name='userName' type='text')
            .col-lg-4.form-zones
              label Email:
              input.form-inputs(name='email' type='email')
            .col-lg-4.form-zones
              label Password:
              input.form-inputs(name='password' type='password')
            .col-lg-4.form-zones
              label Comfirm password:
              input.form-inputs(name='password' type='password')
            .col-lg-4.form-zones
              label Role:
              select#select.form-select(name='role')
                option(value='') Select option
                option(value='Agricultural Officer') Agricultural Officer
                option(value='Farmer One') Farmer One
                option(value='Urban Farmer') Urban farmer
            .col-lg-12.form-radio
              label Gender:
              .radio
                | Male
                input(type='radio' name='sex' value='female' checked='')
                |             Female
                input(type='radio' name='sex' value='male')
            hr.boundary
            .submit
              .btnz(style='transform:translateY(15px);')
                button(type='submit')
                  span
                  | Sign Up
