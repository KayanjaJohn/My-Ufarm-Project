extends layout
block content
    header.card-header
        h4.card-title List of Farmer ones
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='/') Register FarmerOne
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Produce Name
                th Quantity
                th Price
                th Mode of Delivery
                th Mode of Payment
                th Image 
                th Update
                th Change Availability 
                th Delete
        tbody
            if goods.length
                each itemin products
                    if product.status == 'Approved'
                        tr
                            td #{product.prodNcename}
                            td #{product.prodQuantity}
                            td #{product.price}
                            td #{product.deliveryMode}
                            td #{product.paymentMode}
                            td 
                                img(src="/"+product.uploadimage, alt="Image" width='150px' height="150px")
                            //- td #{moment(us
                            td                            
                                a.btn.btn-primary.btn-block(href='/produce/available/'+item._id) Availability


                            td
                                form(method="post" action='/farmerOne/delete')
                                    input(type="hidden" placeholder="" name="id", value=product._id)
                                    button.btn.btn-danger.btn-block(type="submit") Delete
        div.form-row
            div.col.form-group
                a(class='button' href='/agricOfficerDash') Back

