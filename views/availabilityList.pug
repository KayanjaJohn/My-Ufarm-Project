extends dashlayout
block content
    header.card-header
        h4.card-title List of Farmer ones
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='/') Register FarmerOne
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Produce Name
                th Quantity
                th Price
                th Mode of Delivery
                th Mode of Payment
                th Image 
                th Update
                th Change Availability 
                th Delete
        tbody
            if approvedGoods.length
                each approvedGood in approvedGoods
                    if good.status == 'Approved'
                        tr
                            td #{product.prodName}
                            td #{product.prodQuantity}
                            td #{product.price}
                            td #{product.deliveryMode}
                            td #{product.paymentMode}
                            td 
                                img(src="/"+approvedGood.uploadimage, alt="Image" width='150px' height="150px")
                            //- td #{moment(us
                            td                            
                                a.btn.btn-primary.btn-block(href='/produce/available/'+approvedGood._id) Availability


                            td
                                form(method="post" action='/farmerOne/delete')
                                    input(type="hidden" placeholder="" name="id", value=approvedGood._id)
                                    button.btn.btn-danger.btn-block(type="submit") Delete
        div.form-row
            div.col.form-group
                a(class='button' href='/agricOfficerDash') Back

