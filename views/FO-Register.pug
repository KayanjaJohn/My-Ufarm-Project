doctype html
head
  title Title
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.1
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT' crossorigin='anonymous')
  link(rel='stylesheet' href='css/Form.css')
header
  // place navbar here
main
  .container(style='width: 50%; transform:translateY(25px);')
    h2 Please Sign Up
    hr
    .row.justify-content-center.align-items-center.my-5.cage
      .col-lg-2.cage
        form(action='/login' name='register' method='POST')
          .row.justify-content-center.align-items-center.g-2.lamar
            .col-lg-3.form-zones
              label First name:
              input.form-inputs(name='userName' type='text')
            .col-lg-3.form-zones
              label Last name:
              input.form-inputs(name='userName' type='text')
            .col-lg-3.form-zones
              label Date of Registration:
              input.form-inputs(name='regDate' type='date')
            .col-lg-3.form-zones
              label NIN:
              input.form-inputs(name='ninNumber' type='text')
            .col-lg-3.form-zones
              label Date of Birth:
              input.form-inputs(name='birthDay' type='date')
            .col-lg-3.form-zones
              label Contact:
              input.form-inputs(name='phoneNumber' type='text')
            .col-lg-3.form-zones
              label Activities:
              select#select.form-select(name='activities')
                option(value='' style='text-align:center;') Select option
                option(value='Horticulture') Horticulture
                option(value='Poultry') Poultry
                option(value='Diary') Diary
            .col-lg-3.form-zones
              label Unique No:
              input.form-inputs(name='uniqueNumber' type='text')
            .col-lg-3.form-zones
              label Residence type:
              input.form-inputs(name='restype' type='text')
            .col-lg-3.form-zones
              label Period of stay:
              input.form-inputs(name='pOstay' type='text')
            .col-lg-3
              label Ward name:
              input.form-inputs(name='wardName' type='text' style='margin-left:-4px ;')
            .col-lg-12.form-radio
              label Gender:
              .radio
                | Male
                input(type='radio' name='sex' checked='')
                |             Female
                input(type='radio' name='sex')
            .col-sm-12.col-lg-4.form-zones
              label Direction:
              input.form-inputs(name='message' type='text')
            hr.boundary
            .submit
              .btnz(style='transform:translateY(15px);')
                button(type='submit')
                  span
                  | Sign Up
footer
  // place footer here
